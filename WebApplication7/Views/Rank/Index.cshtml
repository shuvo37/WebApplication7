@model List<RankViewModel>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Leaderboard - CodeSphere</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <style>
        body {
            background-color: #f8f9fa;
        }

        .leaderboard-container {
            margin-top: 40px;
        }

        .leaderboard-table {
            background-color: white;
            border-radius: 10px;
            overflow: hidden;
            box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.1);
        }

        thead {
            background-color: #343a40;
            color: white;
        }

        tbody tr:nth-child(odd) {
            background-color: #f2f2f2;
        }

        tbody tr:hover {
            background-color: #d4edda; /* Light green hover effect */
            transition: 0.3s;
        }

        .gold {
            color: gold;
            font-weight: bold;
        }

        .silver {
            color: silver;
            font-weight: bold;
        }

        .bronze {
            color: #cd7f32;
            font-weight: bold;
        }
    </style>
</head>
<body>

    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
            <a class="navbar-brand text-white" href="#">CodeSphere</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a asp-controller="Profile" asp-action="Index" class="nav-link">Profile</a>
                    </li>
                    <li class="nav-item">
                        <a asp-controller="Pblm_view" asp-action="Index" class="nav-link text-white">Problems</a>
                    </li>
                    <li class="nav-item">
                        <a asp-controller="Home" asp-action="Index" class="nav-link text-white">Home</a>
                    </li>
                  
                  
                  
                    <li class="nav-item">
                        <a asp-controller="Account" asp-action="Logout" class="nav-link text-white">Logout</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Leaderboard -->
    <div class="container leaderboard-container">
        <h2 class="text-center mb-4">🏆 Leaderboard</h2>
        <div class="table-responsive leaderboard-table">
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>Rank</th>
                        <th>Username</th>
                        <th>Solved Problems</th>
                        <th>Total Rejected</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var user in Model)
                    {
                        <tr>
                            <td>
                                @if (user.Rank == 1)
                                {
                                    <span class="gold">🥇 @user.Rank</span>
                                }
                                else if (user.Rank == 2)
                                {
                                    <span class="silver">🥈 @user.Rank</span>
                                }
                                else if (user.Rank == 3)
                                {
                                    <span class="bronze">🥉 @user.Rank</span>
                                }
                                else
                                {
                                    <span>@user.Rank</span>
                                }
                            </td>
                            <td>@user.Username</td>
                            <td>@user.SolvedProblems</td>
                            <td>@user.TotalRejected</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

</body>
</html>
