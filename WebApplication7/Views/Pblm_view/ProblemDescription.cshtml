@model ProblemInfo

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@Model.Title</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="stylesheet" href="~/css/bootstrap.min.css" />
    <style>
        header {
            text-align: center;
            padding: 20px;
            background-color: #f5f5f5;
        }

        .content {
            padding: 20px;
        }

        .card {
            margin-bottom: 20px;
        }

        .subheader {
            font-size: 1.5em;
            margin-top: 30px;
            text-align: left;
        }

        .navbar-custom {
            background-color: #000000; /* Black background */
        }

            .navbar-custom .navbar-brand,
            .navbar-custom .nav-link {
                color: #ffffff; /* White text */
            }

                .navbar-custom .nav-link:hover {
                    color: #cccccc; /* Light gray on hover */
                }
    </style>
</head>
<body>

    <nav class="navbar navbar-expand-lg navbar-custom">
        <div class="container-fluid">
            <!-- Logo -->
            <a class="navbar-brand" href="#">CodeSphere</a>
            <!-- Toggle button for mobile -->
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <!-- Navbar links -->
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a asp-controller="Home" asp-action="SubmitCode" asp-route-id="@Model.Id" class="nav-link">Submit</a>
                    </li>
                    <li class="nav-item">
                        <a asp-controller="Pblm_view" asp-action="Index" class="nav-link">Problem Set</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">Profile</a>
                    </li>
                    <li class="nav-item">
                        <a asp-controller="Home" asp-action="Index" class="nav-link">Home</a>
                    </li>
                    <li class="nav-item">
                        <a asp-controller="Home" asp-action="" class="nav-link">About</a>
                    </li>
                    <li class="nav-item">
                        <a asp-controller="Home" asp-action="" class="nav-link">Contact</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>



    <header>
        <h1>@Model.Title</h1>
    </header>
    <div class="content container">
        <p>@Model.Description</p>

        <div class="row">
            <div class="col-sm-6">
                <div class="subheader">Input Format</div>
                <p>@Model.InputFormat</p>
            </div>
            <div class="col-sm-6">
                <div class="subheader">Output Format</div>
                <p>@Model.OutputFormat</p>
            </div>
        </div>

        <div class="row">
            <div class="col-sm-6">
                <div class="card border-primary">
                    <div class="card-header bg-primary text-white">Input</div>
                    <div class="card-body">
                        <p class="card-text"><pre>@Html.Raw(Model.InputExample)</pre></p>
                    </div>
                </div>
            </div>
            <div class="col-sm-6">
                <div class="card border-success">
                    <div class="card-header bg-success text-white">Output</div>
                    <div class="card-body">
                        <p class="card-text">@Model.OutputExample</p>
                    </div>
                </div>
            </div>
        </div>

        @if (!string.IsNullOrEmpty(Model.Explanation))
        {
            <div class="explanation">
                <h3>Explanation</h3>
                <p>@Model.Explanation</p>
            </div>
        }
    </div>

    <script src="~/js/vendor/jquery-1.12.0.min.js"></script>
    <script src="~/bootstrap-3.3.7/js/bootstrap.min.js"></script>
</body>
</html>
