@model ProblemInfo

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Problem Page - Online Judge</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <style>
        body {
            background-color: #f8f9fa;
        }

        .container {
            margin-top: 20px;
        }

        .copy-btn {
            cursor: pointer;
            position: absolute;
            top: 5px;
            right: 5px;
        }

        .textarea-container {
            position: relative;
        }

        textarea {
            width: 100%;
            min-height: 100px;
            resize: vertical;
            padding-right: 35px;
        }
    </style>
</head>
<body>

    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container-fluid">
            <!-- Logo -->
            <a class="navbar-brand text-white" href="#">CodeSphere</a>
            <!-- Toggle button for mobile -->
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <!-- Navbar links -->
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a asp-controller="Home" asp-action="SubmitCode" asp-route-id="@Model.Id" class="nav-link text-white">Submit</a>
                    </li>
                    <li class="nav-item">
                        <a asp-controller="Pblm_view" asp-action="Index" class="nav-link text-white">Problem Set</a>
                    </li>
                    <li class="nav-item">
                        <a asp-controller="Home" asp-action="Index" class="nav-link text-white">Home</a>
                    </li>
                    <li class="nav-item">
                        <a asp-controller="Account" asp-action="Logout" class="nav-link text-white">Logout</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Problem Statement -->
    <div class="container">
        <div class="card">
            <div class="card-body">
                <h2>@Model.Title</h2>
                <p><strong>Description:</strong> @Model.Description</p>
                <p><strong>Input Format:</strong> @Model.InputFormat</p>
                <p><strong>Output Format:</strong> @Model.OutputFormat</p>

                <!-- Example Input -->
                <div class="mb-3 textarea-container">
                    <label class="form-label"><strong>Example Input:</strong></label>
                    <button class="btn btn-sm btn-outline-primary copy-btn" onclick="copyToClipboard('inputExample')">Copy</button>
                    <textarea id="inputExample" class="form-control" readonly>@Html.Raw(Model.InputExample.Replace("<br>", "\n"))</textarea>
                </div>

                <!-- Example Output -->
                <div class="mb-3 textarea-container">
                    <label class="form-label"><strong>Example Output:</strong></label>
                    <button class="btn btn-sm btn-outline-primary copy-btn" onclick="copyToClipboard('outputExample')">Copy</button>
                    <textarea id="outputExample" class="form-control" readonly>@Html.Raw(Model.OutputExample.Replace("<br>", "\n"))</textarea>
                </div>

                <p><strong>Explanation: @Model.Explanation</strong></p>
            </div>
        </div>
    </div>

    <script>
        function copyToClipboard(id) {
            var copyText = document.getElementById(id);
            copyText.select();
            document.execCommand("copy");
            alert("Copied!");
        }
    </script>

</body>
</html>
