@model ProblemInfo

@{
    ViewData["Title"] = "Submit Code - CodeSphere";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <!-- Custom CSS for additional styling -->
    <style>
        .navbar-custom {
            background-color: #000000; /* Black background */
        }

            .navbar-custom .navbar-brand,
            .navbar-custom .nav-link {
                color: #ffffff; /* White text */
            }

                .navbar-custom .nav-link:hover {
                    color: #cccccc; /* Light gray on hover */
                }
    </style>
</head>
<body>

    <nav class="navbar navbar-expand-lg navbar-custom">
        <div class="container-fluid">
            <!-- Logo -->
            <a class="navbar-brand" href="#">CodeSphere</a>
            <!-- Toggle button for mobile -->
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <!-- Navbar links -->
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a asp-controller="Home" asp-action="SubmitCode" class="nav-link">Submit</a>
                    </li>
                    <li class="nav-item">
                        <a asp-controller="Pblm_view" asp-action="Index" class="nav-link">Problem Set</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">Profile</a>
                    </li>
                    <li class="nav-item">
                        <a asp-controller="Home" asp-action="Index" class="nav-link">Home</a>
                    </li>
                    <li class="nav-item">
                        <a asp-controller="Home" asp-action="" class="nav-link">About</a>
                    </li>
                    <li class="nav-item">
                        <a asp-controller="Home" asp-action="" class="nav-link">Contact</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>


    <div class="container">
        <h1>Submit Your Code</h1>
        <p>Choose a language and write your code below.</p>

        <!-- Code Submission Form -->
        <form asp-action="CompileCode" method="post">
            <div class="form-group">
                <label for="language">Choose Language</label>
                <select class="form-control" name="language" id="language">
                    <option value="c">C</option>
                    <option value="cpp">C++</option>
                    <option value="java">Java</option>
                </select>
            </div>
            <div class="form-group">
                <label for="code">Write Your Code</label>
                <textarea class="form-control" name="code" id="code" rows="10" placeholder="Enter your code here..."></textarea>
            </div>
        
            <input type="hidden" name="Id" value="@Model.Id" />
            <input type="hidden" name="Name" value="@Model.Title" />
            <input type="hidden" name="input" value="@Model.InputExample" />
            <input type="hidden" name="expectedOutput" value="@Model.OutputExample" />
            <button type="submit" class="btn btn-success mt-3">Run Code</button>
        </form>

       
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>