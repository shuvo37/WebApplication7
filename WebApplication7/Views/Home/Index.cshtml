@{
    ViewData["Title"] = "Home - CodeSphere";
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <!-- Custom CSS for additional styling -->
    <style>
        .navbar-custom {
            background-color: #000000; /* Black background */
        }

            .navbar-custom .navbar-brand,
            .navbar-custom .nav-link {
                color: #ffffff; /* White text */
            }

                .navbar-custom .nav-link:hover {
                    color: #cccccc; /* Light gray on hover */
                }
    </style>
</head>

<body>

    <nav class="navbar navbar-expand-lg navbar-custom">
        <div class="container-fluid">
            <!-- Logo -->
            <a class="navbar-brand" href="#">CodeSphere</a>
            <!-- Toggle button for mobile -->
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <!-- Navbar links -->
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a asp-controller="Home" asp-action="SubmitCode" class="nav-link">Submit</a>
                    </li>
                    <li class="nav-item">
                        <a asp-controller="Pblm_view" asp-action="Index" class="nav-link">Problem Set</a>
                    </li>
                    <li class="nav-item">
                        <a asp-controller="Profile" asp-action="Index" class="nav-link">Profile</a>
                    </li>

                    <li class="nav-item">
                        <a asp-controller="Rank" asp-action="Index" class="nav-link">rank</a>
                    </li>
    
                    <li class="nav-item">
                        <a asp-controller="Home" asp-action="Index" class="nav-link">Home</a>
                    </li>
                    <li class="nav-item">
                        <a asp-controller="Home" asp-action="" class="nav-link">About</a>
                    </li>
                    <li class="nav-item">
                        <a asp-controller="Home" asp-action="" class="nav-link">Contact</a>
                    </li>
                    <li class="nav-item">
                        <a asp-controller="Home" asp-action="Logout" class="nav-link">Logout</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>


    <!-- Main content -->
    <div class="container mt-4">
        <h1>Welcome to CodeSphere</h1>
        <p>Your ultimate platform for coding challenges and competitions.</p>
    </div>

    <!-- Bootstrap JS (optional, for toggling navbar on mobile) -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>

